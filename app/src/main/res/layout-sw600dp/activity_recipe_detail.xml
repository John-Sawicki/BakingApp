<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ingredients_title"
            android:text="@string/list_of_ingredients"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_ingredients"
            app:layout_constraintTop_toBottomOf="@+id/tv_ingredients_title"
            android:layout_marginStart="@dimen/left_margin"
            android:text="@string/loading_ingredients"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_step_title"
            android:text="@string/steps"
            style="@style/title"
            app:layout_constraintTop_toBottomOf="@id/detail_ingredients"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/step_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_step_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/left_margin">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
                                                    <FrameLayout
                                                        android:id="@+id/detail_fragment"
                                                        android:layout_width="0dp"
                                                        android:layout_weight="2"
                                                        android:layout_height="match_parent"
                                                        app:layout_constraintLeft_toRightOf="@id/step_recycler_view"
                                                        app:layout_constraintRight_toRightOf="parent"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        app:layout_constraintBottom_toBottomOf="parent">
                                                    </FrameLayout>
</LinearLayout>